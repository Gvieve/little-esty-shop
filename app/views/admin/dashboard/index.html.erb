<h3 class="alert alert-dark" style="width:300px">Admin Dashboard</h3>


<%= render "/shared/admin_links" %><br>
<h1 class="alert alert-info"><center>Main</center> </h1>

<div class="btn-group, overflow-auto d-flex justify-content-end">
  <button type="button" class="btn btn-warning dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <span class="sr-only ">Incomplete Invoices</span>
  </button>
  <div class="dropdown-menu">
    <% @invoices.incomplete_invoices.each do |invoice| %>
      <%= link_to "Invoice #{invoice.id} | #{invoice.created_at.strftime("%A, %B %d, %Y")}", "/admin/invoices/#{invoice.id}",  class: "dropdown-item" %>
    <% end %>
  </div>
</div>

<h2> Top Customers</h2>
<% @customers.top_5_customers_with_success.each do |cust| %>
  <table class="table table-striped table-dark table-borderless " style="width:500px">
    <thead>
      <tr>
        <th>First Name:</th>
        <th>Last Name:</th>
        <th>Purchases:</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= cust.first_name %></td>
        <td><%= cust.last_name %></td>
        <td><%= cust.transaction_count %></td>
      </tr>
    </tbody>
  </table>
<% end %>
