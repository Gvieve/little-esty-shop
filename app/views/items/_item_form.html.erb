<%= form_with url: path, method: method, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: item.name%><br><br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "50x5", value: item.description %><br><br>
  <%= f.label :current_price %>
  <%= f.number_field :unit_price, value: item.unit_price %><br><br>
  <%= f.submit button_text %>
<% end %>
