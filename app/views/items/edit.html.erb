<header>
  <h1 class="alert alert-dark" style="width:500px"><center><%= @merchant.name %></center></h1>
  <%= render partial: "/shared/merc_links", locals: {merchant: @merchant} %><br>
</header>
<h3 class="alert alert-info"><center><%= @item.name %></center> </h3>

<%= form_with url: merchant_item_path(@merchant, @item), method: :patch, local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, value: @item.name%><br><br>
  <%= f.label :description %>
  <%= f.text_area :description, size: "50x5", value: @item.description %><br><br>
  <%= f.label :current_price %>
  <%= f.number_field :unit_price, value: @item.unit_price %><br><br>
  <%= f.submit value: "Update Item" %>
<% end %>
