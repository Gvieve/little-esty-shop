<h1>Invoice #<%= @invoice.id %></h1>
<section class="invoice-information">
  <p>Status: <%= @invoice.status.titleize %></p>
  <p>Created on: <%= @invoice.created_at.strftime('%A, %B %d, %Y') %></p>
  <p>Total Revenue:</p>
</section>
<section class="invoice-customer">
  <h3>Customer:</h3>
  <p><%= @invoice.customer.full_name %></p>
  <p><%= @invoice.customer.address %></p>
  <p><%= @invoice.customer.city %>, <%= @invoice.customer.state %> <%= @invoice.customer.zipcode %></p>
</section>
<section class="invoices-items">
  <h3>Items on this Invoice:</h3>
  <% @invoice.invoice_items.each do |invoice_item| %>
    <table class="table table-striped table-dark table-borderless " style="width:500px">
      <thead>
        <tr>
          <th>Item Name:</th>
          <th>Quantity:</th>
          <th>Unit Price:</th>
          <th>Status:</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <td><%= invoice_item.item.name %></td>
          <td><%= invoice_item.quantity %></td>
          <td><%= invoice_item.unit_price %></td>
          <td><%= invoice_item.unit_price %></td>
        </tr>
      </tbody>
    </table>
  <% end %>
</section>
